extends layout


extends tutor_page_sidebarheader



block PAGECONTENT

  // BEGIN PAGE CONTENT
  .row-fluid
    .span12
      .row-fluid
        .span12
          // BEGIN SAMPLE FORM PORTLET
          .portlet.box.green.tabbable
            
            .portlet-title
              .caption
                i.icon-edit
                span.hidden-480   修改教师信息

            .portlet-body.form
              .tabbable.portlet-tabs
                ul.nav.nav-tabs
                  li
                  li
                  li
                    a 请准确填写各项信息

                .tab-content
                  #portlet_tab1.tab-pane.active
                    // BEGIN FORM
                    form#mySysInfoform.form-horizontal(action='/domodifyselfinfo', method='post', novalidate="validated")

                      .control-group
                        label.control-label 教师姓名
                        .controls
                          input.m-wrap.small(type='text', placeholder='教师姓名', name='tutorname', value='#{tutor.tutorName}')
                          span.help-inline 

                      .control-group
                        label.control-label 教师工作证号
                        .controls
                          input.m-wrap.small(type='text', placeholder='工作证号', name='tutornumber', value='#{tutor.tutorNumber}')
                          span.help-inline 网页登录用户名
                          
                      .control-group
                        label.control-label 教师手机号码
                        .controls
                          input.m-wrap.small(type='text', placeholder='手机号码', name='tutorcellphone', value='#{tutor.tutorPhone}')
                          span.help-inline 网页登录默认密码

                      .form-actions.clearfix
                        input(type='hidden', name='modifyid', value='#{id}')
                        button.btn.green.button-submit(type='submit', style="display: inline-block;")
                          i.icon-ok
